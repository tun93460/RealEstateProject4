@{
    ViewData["Title"] = "Search Homes";
}

<div class="container">
    <h2>Search Homes</h2>
    <form asp-controller="Home" asp-action="SearchHomes" method="post">
        <div class="form-group">
            <label for="location">Location</label>
            <input type="text" id="location" name="location" class="form-control" placeholder="Enter Location" />
        </div>

        <div class="form-group">
            <label for="propertyType">Property Type</label>
            <input type="text" id="propertyType" name="propertyType" class="form-control" placeholder="Enter Property Type" />
        </div>

        <div class="form-group">
            <label for="minBedrooms">Min Bedrooms</label>
            <input type="number" id="minBedrooms" name="minBedrooms" class="form-control" placeholder="Enter Minimum Bedrooms" />
        </div>

        <div class="form-group">
            <label for="minBathrooms">Min Bathrooms</label>
            <input type="number" id="minBathrooms" name="minBathrooms" class="form-control" placeholder="Enter Minimum Bathrooms" />
        </div>

        <div class="form-group">
            <label for="minPrice">Min Price</label>
            <input type="text" id="minPrice" name="minPrice" class="form-control" placeholder="Enter Minimum Price" />
        </div>

        <div class="form-group">
            <label for="maxPrice">Max Price</label>
            <input type="text" id="maxPrice" name="maxPrice" class="form-control" placeholder="Enter Maximum Price" />
        </div>


        <div class="form-group">
            <label for="amenities">Amenities</label>
            <input type="text" id="amenities" name="amenities" class="form-control" placeholder="Enter Amenities" />
        </div>

        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>

@model List<Project4.Models.Home>

@{
    ViewData["Title"] = "Search Results";
}

<div class="container">
    <h2>Search Results</h2>

    @if (Model.Count == 0)
    {
        <p>No results found.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Address</th>
                    <th>Property Type</th>
                    <th>Price</th>
                    <th>Size (sq ft)</th>
                    <th>Bedrooms</th>
                    <th>Bathrooms</th>
                    <th>Amenities</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var home in Model)
                {
                    <tr>
                        <td>@home.Address</td>
                        <td>@home.PropertyType</td>
                        <td>@home.Price</td>
                        <td>@home.Size</td>
                        <td>@home.Bedrooms</td>
                        <td>@home.Bathrooms</td>
                        <td>
                            @foreach (var amenity in home.Amenities)
                            {
                                <span>@amenity.AmenityDescription</span>

                                <br />
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

