@model List<Showing>

<h1>Showings</h1>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Showing ID</th>
                <th>Contact</th>
                <th>Showing Date</th>
                <th>Listing</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var showing in Model)
            {
                <tr>
                    <td>@showing.ShowingID</td>
                    <td>
                        <p><strong>Name:</strong> @showing.Contact?.Name</p>
                        <p><strong>Phone:</strong> @showing.Contact?.Phone</p>
                        <p><strong>Email:</strong> @showing.Contact?.Email</p>
                    </td>
                    <td>@showing.ShowingDate</td>
                    <td>ID: @showing.Listing?.Home.HomeID - @showing.Listing?.Home.PropertyType</td>
                    
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No showings available.</p>
}

