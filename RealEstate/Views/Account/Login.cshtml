@{

}
@model Project4.Models.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



<form asp-controller="Account" asp-action="Login" method="POST">
    <div id="login" class="form-group">
        <h2>Login</h2>
        <label asp-for="AccountName" class="form-label">Username</label>
        <input asp-for="AccountName" value="@Context.Request.Cookies["Name"]" placeholder="Username" class="form-control" />
        <span asp-validation-for="AccountName" class="text-danger"></span>

        <label asp-for="AccountPassword" class="form-label">Password</label>
        <input asp-for="AccountPassword" type="password" value="@Context.Request.Cookies["Password"]" placeholder="Password" class="form-control" />
        <span asp-validation-for="AccountPassword" class="text-danger"></span>

        <br />
        
        <button type="submit" class="btn btn-primary">Login</button>
        <div class="form-check">
            <input asp-for="RememberMe" type="checkbox" class="form-control-input" 
                checked="@(Context.Request.Cookies.ContainsKey("Name") ? "checked" : "")" />
            <label asp-for="RememberMe" class="form-check-label">Remember Me</label>

        </div>
        
        <br />

    </div>
    <div class="form-group">
        <a asp-controller="Account" asp-action="ForgotPassword">Forgot Password</a> <br />
        <a asp-controller="Account" asp-action="Register">Register New Account</a>
    </div>
    <div>
        @ViewData["Message"]
    </div>
</form>
