@model AccountSecurityQuestion

<h2>Forgot Password</h2>

@if (Model != null)
{
    @if (TempData["ErrorMessage"] != null)
    {
        <div style="color:red">
            <p>@TempData["ErrorMessage"]</p>
        </div>
    }   

    <form asp-action="VerifySecurityQuestion" method="post">
        <div>
            <h3>@Model.Question.QuestionName</h3>
            <label for="answerText">@Model.Question.QuestionText</label>
            <input type="text" id="answerText" name="answerText" required />
            <input type="hidden" name="accountID" value="@Model.AccountID" />
            <input type="hidden" name="questionID" value="@Model.Question.QuestionID" />
        </div>
            <button type="submit">Verify Answer</button>
        </form>
    }
    else
    {
        <p>No security question found for this account.</p>
    }
}

